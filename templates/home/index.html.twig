{% extends 'base.html.twig' %}
        {% block javascripts %}
            {{ parent() }}
            {{ encore_entry_script_tags('chart') }}
        {% endblock %}
{% block body %}
    <div class="currency-chart">
        <label for="currency-chart-select">Currency: </label>
        <select id="currency-chart-select">
            <option value="usd">U.S. Dollar</option>
            <option value="eur">Euro</option>
            <option value="chf">Swiss Franc</option>
            <option value="gbp">Pound Sterling</option>
        </select>
        <label for="currency-chart-number-of-days">Number of days: </label>
        <input id="currency-chart-number-of-days" type="number" value="7">
        <canvas id="currencyChart"></canvas>
    </div>

{% endblock %}
